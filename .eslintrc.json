// .eslintrc
{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],

  "rules": {
    "no-unused-vars": "error",
    "no-unused-expressions": "error",
    "prefer-const": "error", // let nut not reassign
    "no-console": "warn", // console.log
    "no-undef": "error" // undefine variable or function
  },

  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "process": "readonly" // global process variable use inside config/index.ts
  }
}
